{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"module": "commonjs",
		"noImplicitAny": true,
		"outDir": "./build/",
		"preserveConstEnums": true,
		"sourceMap": true,
		"target": "es5",
		"lib": [
			"dom",
			"es6",
			"esnext",
		]
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"./build/node_modules"
	]
}